package com.hfooad.remoteControlled.dogdoor;

public class Remote {
	private DogDoor door;
	
	public Remote(DogDoor door)
	{
		this.door = dooor;
	}
	
	public void pressButton()
	{
		System.out.println("Pressing the remote control button ...");
		if(door.isOpen())
		{
			door.close();
		}
		else
		{
			door.open();
		}
	}
}
